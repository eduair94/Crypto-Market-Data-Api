# Environment Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Cache Configuration
CACHE_TTL=300

# CORS Configuration
CORS_ORIGIN=*

# Security
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_TITLE=CCXT Trading API
SWAGGER_DESCRIPTION=A comprehensive cryptocurrency trading API built with NestJS and CCXT
SWAGGER_VERSION=1.0.0

